<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Abreath" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimary</item>


        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@font/nunito_sans_light</item>
        <item name="fontFamily">@font/nunito_sans_light</item>
        <item name="android:fontFamily">@font/nunito_sans_light</item>
    </style>
<!--    https://stackoverflow.com/questions/19691530/valid-values-for-androidfontfamily-and-what-they-map-to-->
    <style name="TextAppearance" parent="android:TextAppearance">
        <item name="android:textViewStyle">@font/nunito_sans_light</item>
        <item name="fontFamily">@font/nunito_sans_light</item>
        <item name="android:fontFamily">@font/nunito_sans_light</item>
    </style>
    <style name="TextAppearanceLogo">
        <item name="fontFamily">@font/expletus_sans_bold</item>
        <item name="android:fontFamily">@font/expletus_sans_bold</item>
    </style>

</resources>
